<!-- Page Content -->
<div class="container">
  <!-- Portfolio Item Heading -->
  <div class="my-3 d-flex">
    <img src="/public/icons/user.svg" height="70" width="auto" />
    <div class="ml-3">
      <h2 class="text-warning">
        {{data.sellerName}}
      </h2>
      <p class="text-warning">⭐️ ⭐️ ⭐️ ⭐️ ⭐️({{data.sellerStar}}/5)</p>
    </div>
  </div>

  <!-- Portfolio Item Row -->
  <div class="row">
    <div class="col-md-8">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
          {{#each data.productImages}}
          {{@index}}
          {{#if @index}}
          <div class="carousel-item">
            <img class="d-block w-100" src="{{imgLink}}" width="750px" height="500px" style="object-fit: cover" />
          </div>
          {{else}}
          <div class="carousel-item active">
            <img class="d-block w-100" src="{{imgLink}}" width="750px" height="500px" style="object-fit: cover" />
          </div>
          {{/if}}
          {{/each}}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>

    <div class="col-md-4">
      <h3 class="my-3 text-light">{{data.productName}}</h3>
      <p class="text-muted">
        {{data.productDescription}}
      </p>
      <h3 class="text-light">
        Đấu giá:
        <span class="badge badge-warning">{{data.displayPrice}} VNĐ</span>
      </h3>

      <p class="text-muted">{{data.bidderName}} đang đấu giá</p>
      <p class="text-muted">Đã đăng bài {{data.startDate}}</p>
      <!-- Đếm ngược -->
      <div>
        <div class="d-flex flex-direction-row">
          <img src="/public/icons/alarm.svg" height="25" width="auto" class="mr-2" />
          <p class="text-muted">Kết thúc vào {{data.endDate}}...</p>
        </div>
        <div class="progress mb-2">
          <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar"
            style="width: {{data.calcTime}}%"></div>
        </div>
      </div>

      <div class="buttons">
        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModal2">
          ĐẤU GIÁ
        </button>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
          MUA NGAY
        </button>
      </div>
    </div>
  </div>
  <!-- /.row -->

  <!-- Related Projects Row -->
  <h3 class="my-4 text-light">Sản phẩm liên quan</h3>

  <div class="row my-4">
    {{#each data.relativeProductImages}}
    <div class="col-md col-sm-6 mb-4">
      <a href="/product/detail/{{prodID}}">
        <img class="img-fluid" src="{{imgLink}}" width="500px" height="300px"
          style="object-fit: cover" />
      </a>
    </div>
    {{/each}}
  </div>
  <!-- /.row -->
</div>
<!-- /.container -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content text-dark">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xác nhận</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Sản phẩm này có giá mua ngay là 28.000.000 VNĐ. Bạn có thật sự muốn
        mua ngay bây giờ không?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">
          HUỶ BỎ
        </button>
        <button type="button" class="btn btn-danger">QUYẾT ĐỊNH MUA</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content text-dark">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Đấu giá</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group ">
            <label for="bidprice" class="col-form-label">Nhập giá muốn trả cho sản phẩm này:</label>
            <input type="text" class="form-control" id="bidprice" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">
          HUỶ BỎ
        </button>
        <button type="button" class="btn btn-warning">
          QUYẾT ĐỊNH ĐẤU GIÁ
        </button>
      </div>
    </div>
  </div>
</div>