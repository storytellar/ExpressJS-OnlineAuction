<body style="background-color: #2C3137;">
  <!-- navbar guest -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <a class="navbar-brand" href="/"><img src="/public/images/logo.png" alt="" width="120px" height="auto"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        {{#each lcMenu}}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            {{Name}}
          </a>
          <div class="dropdown-menu bg-dark" aria-labelledby="navbarDropdownMenuLink">
            {{#each SubMenu}}
            <a class="dropdown-item bg-dark text-light" href="/product/category?id={{id}}&page=1">{{catName}}</a>
            {{/each}}
          </div>
        </li>
        {{/each}}
      </ul>
      <div class="d-flex flex-direction-row">
        <a class="nav-link text-light" href="/user/login">Đăng nhập</a>
        <a class="btn btn-warning  my-sm-0" href="/user/signup">Đăng ký</a>
      </div>
    </div>
  </nav>


  <div class="container-fluid">
  <!-- SEARCH BAR -->
  <div class="row" style="background: rgb(43, 49, 55);">
    <div class="col-sm"></div>
    <div class="col-12 col-sm-10 col-md-8 col-lg-6">
      <div class="search-header d-flex flex-column justify-content-center align-items-center" style="height: 230px;">
        <p class="h4 mb-3 text-warning">TÌM HÀNG TRÊN CHỢ ĐEN</p>
        <!-- inputbox -->
        <form class="input-group mb-3" action="/product/search" method="get">
          <input type="text" class="form-control" name="keyword" id="keyword" placeholder="Tìm kiếm..." />
          <div class="input-group-append">
            <button class="btn btn-warning" type="submit">
              <img src="/public/icons/search.svg" height="20px" width="auto" />
            </button>
          </div>
        </form>
      </div>
    </div>
    <div class="col-sm"></div>
  </div>
</div>

<!-- HTML: BODY -->
<div class=" container-fluid d-flex align-items-center justify-content-center" style="background-color: #353A40;">
  <div class="display-4 text-light py-4 text-center">SÀN ĐẤU GIÁ LỚN NHẤT THẾ GIỚI</div>
</div>




